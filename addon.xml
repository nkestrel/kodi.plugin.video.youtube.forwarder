<?xml version='1.0' encoding='UTF-8' standalone='yes'?>
<addon id="plugin.video.youtube" name="Youtube Forwarder" provider-name="Kestrel" version="10000.0.2">
  <requires>
	<import addon="xbmc.python" version="2.1.0" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
      <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Forwards Youtube play requests to a different plugin.</summary>
    <description lang="en">Allows plugins and remote applications designed to play videos with the standard Youtube plugin (by TheCollective) to work with a different plugin of choice.</description>
	<disclaimer lang="en"></disclaimer>
	<platform>all</platform>
    <website></website>
    <source>https://github.com/nkestrel/kodi.plugin.video.youtube.forwarder</source>
    <forum>http://forum.kodi.tv/showthread.php?tid=200735</forum>
    <email></email>
  </extension>
  <extension library="lib" point="xbmc.python.module" />
</addon>